<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.richam112.ece_445.MainActivity">

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp"
        android:layout_marginTop="61dp"
        android:id="@+id/send_message" />

    <TextView
        android:text="SEND SMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/send_message"
        android:layout_alignBottom="@+id/send_message"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone_number"
        android:hint="Enter Phone Number"
        android:inputType="phone"
        android:digits="12179040345"
        android:textColorHint="@color/abc_primary_text_material_dark"
        android:layout_centerHorizontal="true" />


    <ToggleButton
        android:text="SEND TO CONTACTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_message"
        android:layout_alignStart="@+id/send_message"
        android:layout_marginTop="69dp"
        android:id="@+id/toggleButton2" />

    <ToggleButton
        android:text="CALL_911"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleButton2"
        android:layout_alignEnd="@+id/toggleButton2"
        android:layout_marginTop="93dp"
        android:id="@+id/toggleButton3" />

    <TextView
        android:text="CALL911"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginEnd="16dp"
        android:layout_alignBaseline="@+id/toggleButton3"
        android:layout_alignBottom="@+id/toggleButton3"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textLongMessage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp" />

    <TextView
        android:text="ENABLE LOCATION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/toggleButton2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="25dp" />


</RelativeLayout>
